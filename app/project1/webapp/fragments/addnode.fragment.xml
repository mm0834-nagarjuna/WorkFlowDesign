<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
   <Dialog
      id="createNode"
      title="Create Node" 
      class="sapUiPopupWithPadding"
      >
      
      <VBox>
        <Label text="Node Key"></Label>
        <Input type="Text" value="{createNodeModel>/nodeKey}"></Input>

        <Label text="Node Title"></Label>
         <Input type="Text" value="{createNodeModel>/nodeTitle}"></Input>

         

        <Label text="Node Description"></Label>
         <Input type="Text" value="{createNodeModel>/nodeDescription}"></Input>

         <Label text="Work FLow Name"></Label>
         <Input type="Text" value="{createNodeModel>/workFlowNameNode}" editable="false"></Input>


         


      </VBox>
    
      <beginButton>
         <Button text="Create" press="onCreate_Node" />
      </beginButton>
      
      <endButton>
         <Button text="Cancel" press="onCancle_Node" />
      </endButton>
   </Dialog>
</core:FragmentDefinition>