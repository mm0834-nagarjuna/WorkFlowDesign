<mvc:View
    controllerName="project1.controller.WorkFlowGround"
    xmlns="sap.suite.ui.commons.networkgraph"
    xmlns:mvc="sap.ui.core.mvc"
    height="100%"
>
    <Graph
        id="graph"
        enableWheelZoom="false"
        nodes="{/Nodes}"
        lines="{/Lines}"
    >
        <nodes>
            <Node
                key="{nodeKey}"
                title="{nodeTitle}"
                shape="Box"
                description="{nodeDescription}"
                press="nodePress"
            >
                <actionButtons>
                    <ActionButton
                        icon="sap-icon://chain-link"
                        title="Create Line"
                        press="onCreateLinefragment"
                    />
                    <ActionButton
                        icon="sap-icon://decision"
                        title=" Take Decision"
                        press="onDecisionNodeBtn"
                    />
                    <ActionButton
                        icon="sap-icon://add"
                        title="Add Node"
                        press="onAddNodeBtn"
                    />
                    <ActionButton
                        icon="sap-icon://edit"
                        title="Edit Node"
                        press="onEditNodeBtn"
                    />
                    <ActionButton
                        icon="sap-icon://delete"
                        title="Delete Node"
                        press="onDeleteNodeBtn"
                    />
                </actionButtons>
            </Node>
        </nodes>
        <lines>
            <Line
                title="{lineKey}"
                from="{fromNodeKey}"
                to="{toNodeKey}"
                arrowPosition="Middle"
                selected="true"
                press="linePress"
            >
                <actionButtons>
                    <ActionButton
                        icon="sap-icon://delete"
                        title="Delete Line"
                        press="onDeleteLineBtn"
                    />
                </actionButtons>
            </Line>
        </lines>
    </Graph>
</mvc:View>
