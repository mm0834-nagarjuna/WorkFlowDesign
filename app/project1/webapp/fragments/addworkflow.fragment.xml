<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
   <Dialog
      id="createWorkFlow"
      title="Create WorkFlow" 
      class="sapUiPopupWithPadding"
      >
      
      <VBox>
        <Label text="Work Flow Name"></Label>
        <Input type="Text" value="{newWorkFlow>/workflowName}" ></Input>

        <Label text="Work Flow Small Description"></Label>
        <Input type="Text" value="{newWorkFlow>/workflowDescription}" ></Input>

         


      </VBox>
    
      <beginButton>
         <Button text="Create" press="onCreate_workFlow" />
      </beginButton>
      
      <endButton>
         <Button text="Cancel" press="onCancle_WorkFlow" />
      </endButton>
   </Dialog>
</core:FragmentDefinition>