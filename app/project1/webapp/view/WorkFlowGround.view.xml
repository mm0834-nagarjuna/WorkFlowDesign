<mvc:View
    controllerName="project1.controller.WorkFlowGround"
    xmlns="sap.suite.ui.commons.networkgraph"
    xmlns:mvc="sap.ui.core.mvc"
    height="100%"
>
    <Graph
        id="graph"
        enableWheelZoom="true"
        nodes="{/Nodes}"
        lines="{/Lines}"
    >
        <nodes>
            <Node
                key="{nodeKey}"
                title="{nodeTitle}"
                x="{nodePositionX}"
                y="{nodePositionY}"
                shape="Box"
                description="{nodeDescription}"
            >
                <actionButtons>
                  <ActionButton
                        icon="sap-icon://chain-link"
                        title="Create Line"
                        press="onCreate_Line_fragment"
                    />
                    <ActionButton
                        icon="sap-icon://add"
                        title="Add Node"
                        press="onAdd_Node_Btn"
                    />
                     <!-- <ActionButton
                        icon="sap-icon://edit"
                        title="Edit Node"
                        press="onEdit_Node_Btn"
                    /> -->
                     <ActionButton
                        icon="sap-icon://delete"
                        title="Delete Node"
                        press="onDelete_Node_Btn"
                    />
                </actionButtons>
            </Node>
        </nodes>
        <lines>
            <Line
                from="{fromNodeKey}"
                to="{toNodeKey}"
                arrowPosition="Middle"
            />
        </lines>
    </Graph>
</mvc:View>
