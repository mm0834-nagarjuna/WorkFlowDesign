<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="createDecision"
        title="Create Decision"
        class="sapUiPopupWithPadding"
    >
        <VBox>
            <Label text="Node Key" />
            <Input
                type="Text"
                value="{createDecisionModel>/nodeKey}"
                editable="false"
            />

            <Label text="Select Decision" />

            <ComboBox 
          
            id="decisionComboBox"
            value="{createDecisionModel>/Decision}"
             >
                <core:Item
                    key="Accept"
                    text="Accept"
                />
                <core:Item
                    key="Reject"
                    text="Reject"
                />
                <core:Item
                    key="Revert"
                    text="Revert"
                />
            </ComboBox>
            <Label text="Line Key" />
            <Input
                type="Text"
                value="{createDecisionModel>/lineKey}"
                editable="false"
            />
        </VBox>

        <beginButton>
            <Button
                text="Create"
                press="onCreate_Decision"
            />
        </beginButton>

        <endButton>
            <Button
                text="Cancel"
                press="onCancle_Decision"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
