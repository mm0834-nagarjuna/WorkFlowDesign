<mvc:View
    controllerName="project1.controller.WorkFlowGround"
    xmlns="sap.suite.ui.commons.networkgraph"
    xmlns:mvc="sap.ui.core.mvc"
    height="100%"
>
    <Graph
        id="graph"
        enableWheelZoom="true"
        nodes="{/Nodes}"
        lines="{/Lines}"
    >
        <nodes>
            <Node
                key="{nodeKey}"
                title="{nodeTitle}"
                x="{nodePositionX}"
                y="{nodePositionY}"
                shape="Box"
            >
                <actionButtons>
                    <ActionButton
                        icon="sap-icon://add"
                        title="Add Node"
                        press="onAdd_Node_Btn"
                    />
                </actionButtons>
            </Node>
        </nodes>
        <lines>
            <Line
                from="{fromNodeKey}"
                to="{toNodeKey}"
            />
        </lines>
    </Graph>
</mvc:View>
