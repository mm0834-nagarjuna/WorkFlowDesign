<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="createWorkFlow"
        title="Create WorkFlow"
        class="sapUiPopupWithPadding"
    >
        <VBox>
            <Label text="Work Flow Name" />
            <Input
                type="Text"
                value="{oNewWorkFlow>/workflowName}"
            />

            <Label text="Work Flow Small Description" />
            <Input
                type="Text"
                value="{oNewWorkFlow>/workflowDescription}"
            />
        </VBox>

        <beginButton>
            <Button
                text="Create"
                press="onCreateWorkFlow"
            />
        </beginButton>

        <endButton>
            <Button
                text="Cancel"
                press="onCancelWorkFlow"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
