<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
   <Dialog
      id="createWorkFlow"
      title="Create WorkFlow" 
      class="sapUiPopupWithPadding"
      >
      
      <VBox>
        <Label text="Work Flow Name"></Label>
        <Input type="Text" value="{oNewWorkFlow>/workflowName}" ></Input>

        <Label text="Work Flow Small Description"></Label>
        <Input type="Text" value="{oNewWorkFlow>/workflowDescription}" ></Input>

      </VBox>
    
      <beginButton>
         <Button text="Create" press="onCreateWorkFlow" />
      </beginButton>
      
      <endButton>
         <Button text="Cancel" press="onCancelWorkFlow" />
      </endButton>
   </Dialog>
</core:FragmentDefinition>