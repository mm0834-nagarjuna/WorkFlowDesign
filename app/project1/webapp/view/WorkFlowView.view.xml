<mvc:View controllerName="project1.controller.WorkFlowView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    >
   <Page id="page" title="Work Flow Sheets" >

        <headerContent>
            <Button icon="sap-icon://add" tooltip="Add Employee" press="onNewWorkFlow" />
        </headerContent>
        <List
            id="WorkFlowList"
            class="sapUiResponsiveMargin"
            width="auto"
            growing="true"
            growingThreshold="5"
            mode="Delete"
		    delete="handleDelete"
            items="{
                path: 'WorkflowTemplete>/'
            }">

            <headerToolbar>
                <Toolbar>
                    <Label id="tableHeader" text="Work Flow List"/>
                    <ToolbarSpacer />
                    <SearchField id="searchField" width="auto" search="onSearchEmployee" />
                </Toolbar>
            </headerToolbar>
            <items>
                <ObjectListItem
                    title="{WorkflowTemplete>workflowName}"
                    type="Navigation"
                    press="onSelect"
                   
                    >
                    <ObjectAttribute text="{WorkflowTemplete>workflowDescription}" />
                </ObjectListItem>
            </items>
        </List>

<footer>
